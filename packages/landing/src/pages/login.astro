---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Sign In - PR Manager" description="Sign in to your PR Manager account.">
  <Header />
  <main id="main-content" class="pt-32 pb-20 px-6 min-h-screen">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-10">
        <h1 class="text-4xl font-black text-white mb-3">
          Welcome back
        </h1>
        <p class="text-slate-300">
          Sign in to your PR Manager account.
        </p>
      </div>

      <div class="glass-card rounded-3xl p-8">
        <form id="login-form" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-semibold text-slate-300 mb-2">
              Email address
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              autocomplete="email"
              class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-slate-400 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
              placeholder="you@example.com"
            />
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <label for="password" class="block text-sm font-semibold text-slate-300">
                Password
              </label>
              <a href="/forgot-password" class="text-sm text-primary hover:text-primary/80 focus:text-primary/80 transition-colors">
                Forgot password?
              </a>
            </div>
            <input
              type="password"
              id="password"
              name="password"
              required
              autocomplete="current-password"
              class="w-full px-4 py-3.5 rounded-xl bg-white/5 border border-white/10 text-white placeholder-slate-400 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all"
              placeholder="Enter your password"
            />
          </div>

          <div id="error-message" class="hidden p-4 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400 text-sm" role="alert" aria-live="polite">
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full py-4 px-6 bg-gradient-to-r from-primary to-accent text-white font-bold rounded-xl hover:shadow-lg hover:shadow-primary/30 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Sign In
          </button>
        </form>

        <div class="mt-8 text-center">
          <p class="text-sm text-slate-300">
            Don't have an account?
            <a href="/signup" class="text-primary hover:text-primary/80 focus:text-primary/80 font-semibold transition-colors">Create one</a>
          </p>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  const API_URL = 'https://api.prmanager.app';

  // Error messages for different scenarios
  const ERROR_MESSAGES: Record<string, string> = {
    'Invalid email or password': 'The email or password you entered is incorrect.',
    'Account suspended': 'Your account has been suspended.',
    'Validation failed': 'Please check your email and password format.',
    'Failed to authenticate': 'Unable to sign in. Please try again later.',
    'network_error': 'Unable to connect to the server. Please check your internet connection.',
    'rate_limited': 'Too many login attempts. Please wait a moment and try again.',
    'server_error': 'Something went wrong on our end. Please try again later.',
    'default': 'Unable to sign in. Please try again.',
  };

  // Get redirect URL from params (optional)
  const urlParams = new URLSearchParams(window.location.search);
  const redirectTo = urlParams.get('redirect') || '/success';

  const form = document.getElementById('login-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = (document.getElementById('email') as HTMLInputElement).value.trim();
    const password = (document.getElementById('password') as HTMLInputElement).value;

    if (!email || !password) {
      showError('Please fill in all fields.');
      return;
    }

    submitBtn.disabled = true;
    submitBtn.textContent = 'Signing in...';
    hideError();

    try {
      const response = await fetch(`${API_URL}/auth/login`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ email, password }),
      });

      // Handle rate limiting
      if (response.status === 429) {
        showError(ERROR_MESSAGES['rate_limited']);
        resetButton();
        return;
      }

      // Handle server errors
      if (response.status >= 500) {
        showError(ERROR_MESSAGES['server_error']);
        resetButton();
        return;
      }

      let data;
      try {
        data = await response.json();
      } catch {
        showError(ERROR_MESSAGES['server_error']);
        resetButton();
        return;
      }

      if (!response.ok) {
        // Handle suspended account with reason
        if (response.status === 403 && data.code === 'USER_SUSPENDED') {
          const reason = data.reason || ERROR_MESSAGES['Account suspended'];
          showError(reason);
          resetButton();
          return;
        }

        // Get appropriate error message
        const errorKey = data.error || 'default';
        const message = ERROR_MESSAGES[errorKey] || data.error || ERROR_MESSAGES['default'];
        showError(message);
        resetButton();
        return;
      }

      // Store tokens in localStorage
      localStorage.setItem('pr_manager_token', data.accessToken);
      if (data.refreshToken) {
        localStorage.setItem('pr_manager_refresh_token', data.refreshToken);
      }
      localStorage.setItem('pr_manager_user', JSON.stringify(data.user));

      // Redirect to the specified URL or success page
      window.location.href = redirectTo;
    } catch (error: unknown) {
      // Network error or fetch failed
      if (error instanceof TypeError && error.message.includes('fetch')) {
        showError(ERROR_MESSAGES['network_error']);
      } else {
        showError(ERROR_MESSAGES['default']);
      }
      resetButton();
    }
  });

  function showError(message: string) {
    errorMessage.textContent = message;
    errorMessage.classList.remove('hidden');
  }

  function hideError() {
    errorMessage.classList.add('hidden');
  }

  function resetButton() {
    submitBtn.disabled = false;
    submitBtn.textContent = 'Sign In';
  }
</script>
